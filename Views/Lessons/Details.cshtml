@model SpatulaApi.Data.Lesson

@{
    ViewData["Title"] = "Details";
}

<h1>تفاصيل الدرس</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Warnings)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Warnings)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArabicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArabicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Utensils)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Utensils != null && Model.Utensils != "")
            {
                <ul>
                    @foreach (var f in Model.Utensils.Split(','))
                    {
                        <li>@f</li>
                    }
            </ul>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class = "col-sm-10">
               @if (Model.Ingredients != null && Model.Ingredients != "")
            {
                <ul>
                    @foreach (var f in Model.Ingredients.Split(','))
                    {
                        <li>@f</li>
                    }

                </ul>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoUrl)
        </dt>
        <dd class = "col-sm-10">
            <video src="@Model.VideoUrl" controls>
                
            </video>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a> 
    <a asp-action="Index" class="btn btn-outline-success">العودة الى قائمة الدروس</a>
</div>
